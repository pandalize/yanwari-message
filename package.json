{
  "name": "yanwari-message",
  "version": "1.0.0",
  "description": "やんわり伝言サービス - AI を使って気まずい用件を優しく伝えるサービス",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "./scripts/dev-start.sh",
    "dev:local": "./scripts/dev-local.sh",
    "dev:cloud": "./scripts/dev-firebase.sh",
    "build": "npm run build:frontend && npm run build:backend",
    "test": "npm run test:backend && npm run test:frontend",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "setup": "npm run install:all && npm run setup:env && npm run tools:install",
    "reset": "./scripts/full-reset.sh",
    "status": "./scripts/dev-status.sh",
    "stop": "./scripts/dev-stop.sh",
    "api:sync": "./scripts/swagger-generate.sh && echo '🔄 API仕様同期完了'",
    "mongodb:start": "./scripts/mongodb-local.sh start",
    "mongodb:stop": "./scripts/mongodb-local.sh stop",
    "mongodb:reset": "./scripts/mongodb-local.sh reset",
    "mongodb:seed": "./scripts/mongodb-local.sh seed",
    "mongodb:status": "./scripts/mongodb-local.sh status",
    "firebase:seed": "node scripts/firebase-seed.cjs",
    "sync:users": "node scripts/sync-firebase-mongodb.cjs",
    "setup:local": "npm run mongodb:seed && npm run firebase:seed && npm run sync:users",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && go build -o bin/server main.go",
    "test:backend": "cd backend && go test ./...",
    "test:frontend": "cd frontend && npm run test:unit",
    "lint:backend": "cd backend && go vet ./...",
    "lint:frontend": "cd frontend && npm run lint",
    "install:all": "npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && go mod download && go mod tidy",
    "setup:env": "./scripts/setup-env-safe.sh",
    "tools:install": "cd frontend && npm install swagger-typescript-api && cd ../backend && go install github.com/swaggo/swag/cmd/swag@latest",
    "clean:frontend": "cd frontend && rm -rf node_modules dist",
    "clean:backend": "cd backend && go clean -cache -modcache",
    "db:reset": "node backend/scripts/db-reset.cjs",
    "db:seed": "node backend/scripts/db-seed.cjs --dataset=full"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/yanwari-message.git"
  },
  "keywords": [
    "ai",
    "communication",
    "message",
    "go",
    "vue",
    "anthropic",
    "mongodb"
  ],
  "author": "Yanwari Message Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-org/yanwari-message/issues"
  },
  "homepage": "https://github.com/your-org/yanwari-message#readme",
  "dependencies": {
    "dotenv": "^17.2.1",
    "firebase": "^12.1.0",
    "firebase-admin": "^13.4.0",
    "mongodb": "^6.18.0"
  }
}