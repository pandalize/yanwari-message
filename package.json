{
  "name": "yanwari-message",
  "version": "1.0.0",
  "description": "やんわり伝言サービス - AI を使って気まずい用件を優しく伝えるサービス",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && go run main.go",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "build:backend": "cd backend && go build -o bin/server main.go",
    "test": "concurrently \"npm run test:backend\" \"npm run test:frontend\"",
    "test:backend": "cd backend && go test ./...",
    "test:frontend": "cd frontend && npm run test:unit",
    "test:e2e": "cd frontend && npm run test:e2e",
    "lint": "concurrently \"npm run lint:backend\" \"npm run lint:frontend\"",
    "lint:backend": "cd backend && go vet ./...",
    "lint:frontend": "cd frontend && npm run lint",
    "format": "npm run format:frontend",
    "format:frontend": "cd frontend && npm run format",
    "install:all": "npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && go mod download && go mod tidy",
    "clean": "concurrently \"npm run clean:frontend\" \"npm run clean:backend\"",
    "clean:frontend": "cd frontend && rm -rf node_modules dist",
    "clean:backend": "cd backend && go clean -cache -modcache",
    "setup": "npm run install:all && npm run setup:env",
    "setup:env": "cp backend/.env.example backend/.env || echo 'backend/.env already exists'",
    "start": "npm run dev",
    "mongodb:start": "docker-compose up -d mongodb",
    "mongodb:stop": "docker-compose down",
    "mongodb:admin": "docker-compose up -d",
    "dev:local": "npm run mongodb:start && npm run dev:backend",
    "docker:build": "docker build -t yanwari-message .",
    "docker:run": "docker run -p 8080:8080 -p 5173:5173 yanwari-message"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/yanwari-message.git"
  },
  "keywords": [
    "ai",
    "communication",
    "message",
    "go",
    "vue",
    "anthropic",
    "mongodb"
  ],
  "author": "Yanwari Message Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-org/yanwari-message/issues"
  },
  "homepage": "https://github.com/your-org/yanwari-message#readme"
}
